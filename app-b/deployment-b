apiVersion: apps/v1
kind: Deployment
metadata:
  name: app-b-deployment
spec:
  replicas: 2
  selector:
    matchLabels:
      app: app-b
  template:
    metadata:
      labels:
        app: app-b
    spec:
      containers:
        - name: app-b-main
          image: node:18
          ports:
            - containerPort: 3000
        - name: app-b-sidecar
          image: prom/prometheus
          ports:
            - containerPort: 9090
